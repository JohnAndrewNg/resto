<div class="page-header">
  <h1>
    Restaurants
    <a href="/restaurants/new" class="btn btn-lg btn-success">New Restaurant</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Placeid</th>
        <th>Name</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Addresss</th>
        <th>Zipcode</th>
        <th>Phone number</th>
        <th>Url</th>
        <th>Price level</th>
        <th>Rating</th>
        <th>Opening hours</th>
        <th>Photo url</th>
        <th>Actions</th>
      </tr>

      <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.placeid %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.latitude %></td>
        <td><%= restaurant.longitude %></td>
        <td><%= restaurant.addresss %></td>
        <td><%= restaurant.zipcode %></td>
        <td><%= restaurant.phone_number %></td>
        <td><%= restaurant.url %></td>
        <td><%= restaurant.price_level %></td>
        <td><%= restaurant.rating %></td>
        <td><%= restaurant.opening_hours %></td>
        <td><%= restaurant.photo_url %></td>
        <td>
          <a href="/restaurants/<%= restaurant.id %>" class="btn btn-primary">Show</a>
          <a href="/restaurants/<%= restaurant.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_restaurant/<%= restaurant.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
