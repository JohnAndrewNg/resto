<div class="page-header">
  <h3>User #<%= @user.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>User</dt>
      <dd><%= @user.id %></dd>

      <dt>Username</dt>
      <dd><%= @user.username %></dd>

      <dt>Name</dt>
      <dd><%= @user.first_name %> <%= @user.last_name %></dd>

      <dt>Location</dt>
      <dd><%= @user.location %><dd>

      <dt>Bio</dt>
      <dd><%= @user.bio %><dd>

      <dt>Photo</dt>
      <dd><img src="<%= @user.photo %>"><dd>


    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/users" class="btn btn-primary">
        Back
      </a>

    </div>
  </div>
</div>
